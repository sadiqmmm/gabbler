<div class="form-group">
  <label class="control-label" for="<%= @type %>_<%= @title %>"><%= @title %></label>
  <textarea class="form-control" id="<%= @type %>_<%= @title %>" name="<%= @type %>[<%= @title %>]">
    <%= @value %>    
  </textarea>
  <div class="form-description"><%= @desc %></div>
  <div class="form-error"><%= show_error(Keyword.get(@changeset.errors, @changeset_key)) %></div>
</div>